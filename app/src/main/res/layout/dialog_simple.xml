<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/out_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/dialog_layout"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:background="@drawable/dialog_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="请选择"
        android:textSize="14sp"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="@+id/dialog_layout"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_layout"
        app:layout_constraintRight_toRightOf="@+id/dialog_layout"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text=""
        android:textSize="14sp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_layout"
        app:layout_constraintRight_toRightOf="@+id/dialog_layout"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/vertical_line"
        android:layout_width="1dp"
        android:layout_height="42dp"
        android:background="#1A000000"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_layout"
        app:layout_constraintRight_toRightOf="@+id/dialog_layout"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_layout"
        />

    <View
        android:id="@+id/horizontal_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1A000000"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_layout"
        app:layout_constraintRight_toRightOf="@+id/dialog_layout"
        app:layout_constraintTop_toTopOf="@+id/vertical_line"
        />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_view"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_layout"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_layout"
        app:layout_constraintRight_toRightOf="@+id/vertical_line"
        android:gravity="center"
        android:textSize="14sp"
        android:text="取消"
        android:textColor="#999999"
        />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_view"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_layout"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_line"
        app:layout_constraintRight_toRightOf="@+id/dialog_layout"
        android:gravity="center"
        android:textSize="14sp"
        android:text="确定"
        android:textColor="#FF5500"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
